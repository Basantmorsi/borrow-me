<div class="new-tool">
  <%= simple_form_for(tool, html: { class: 'tool-form' }) do |f| %>
    <%= f.error_notification %>

    <div class="field">
      <%= f.input :name %>
    </div>

    <div class="field">
      <%= f.input :description %>
    </div>

    <div class="field">
      <%= f.input :availability, label: 'Tool available?' %>
    </div>

    <div class="field">
      <%= f.input :manual %>
    </div>

    <div class="field">
      <%= f.input :brand %>
    </div>

    <div class="field">
      <%= f.input :photo, as: :file %>
    </div>

    <div class="actions">
      <%= f.submit "Create Tool", class: "create_button" %>
    </div>
  <% end %>
</div>
