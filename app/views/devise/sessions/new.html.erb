<div class="login-form">
  <h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "input-field" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "input-field" } %>
    <%= f.input :remember_me, as: :boolean, label: "Remember me", wrapper_html: { class: "checkbox-field" } if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "custom-button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
