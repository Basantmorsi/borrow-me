<section class="home">
   <div class="bannerText">
    <h1 class="display-1 mb-3 pb-2">Don't buy what you can borrow!</h1>
    <h3 class="display-6 lead mb-4 pb-3">Sharing is caring, find the tool you need and borrow it!</h3>
  </div>
   <div class="text-center" style="position: absolute; left: 50%; transform: translateX(-50%); width: 50%;">
        <div class="searchbar rounded-pill">
           <%= form_with url:tools_path, method: :get, class: "form-inline my-2 my-lg-0 w-100" do %>
                <div class="input-group w-100">
                    <%= text_field_tag :search, params[:search], class: "form-control custom-input", placeholder: "Search tools", aria: { label: "Search tools" } %>
                    <div class="input-group-append">
                        <%= button_tag "", class: "searchbar-btn btn-outline-success rounded-pill" do %>
                        <i class="fa-solid fa-magnifying-glass"></i>
                      <% end %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</section>
<div class="text-center mt-2">
    <%= link_to "Browse Tools", tools_path, class: "btn btn-primary rounded-pill", id: "browse-tools-btn" %>
</div>
<div class="container mt-4">
    <h1 class="text-center font-weight-bold">Recently added</h1>
</div>
<div class="container-product_card">
  <div class="row">
    <% @tools.each do |tool| %>
      <div class="col-md-4">
        <a href="<%= tool_path(tool) %>" class="text-decoration-none">
          <div class="product_card mb-4">
            <% if tool.photo.key.present? %>
              <%= cl_image_tag tool.photo.key, crop: :fill %>
            <% else %>
              <img src="<%= 'https://i.ebayimg.com/images/g/sDMAAOSwFLVkgGBh/s-l1600.jpg' %>" alt="<%= tool.name %>" class="product_card-img">
            <% end %>
            <div class="product_card-body">
              <h2 class="product_card-title"><%= tool.name %></h2>
              <p class="product_card-text"><%= tool.brand %></p>
              <p class="product_card-text"><%= tool.description %></p>
              <p class="product_card-text">
                <span class="availability rounded-pill <%= tool.availability ? 'bg-success' : 'bg-warning' %> text-black"
                  style="font-size: 12px; padding: 8px;">
                  <%= tool.availability ? 'Available' : 'Unavailable at the moment' %>
                </span>
              </p>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <div class="request-box" style="background-color: #CFE1B9;">
        <h1>Didn't find what you were looking for?</h1>
        <%= form_for Request.new, url: post_request_path, class: "request-form" do |f| %>
          <div class="form-group">
            <%= f.label :message %>
            <%= f.text_area :message, class: 'form-control', rows: 4, required: true %>
          </div>
          <div class="form-group">
            <%= f.submit 'Send message', class: 'submit-btn' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- Add this section to display the latest requests on the home page -->

