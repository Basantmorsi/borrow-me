                     <%= form.text_area(:content, cols: 60, rows: 10) %>

                    <%= form.submit :disabled => true, 'data-overly-target': "submitButton"%>
                  <% end %>
                </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
