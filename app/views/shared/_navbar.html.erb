
<nav class="nav">
        <div class="container">
            <div class="logo">
                <%= link_to root_path do %>
                    <%= image_tag("logo.png", alt: "Home", class: "logo-btn", style: "width: auto; height: 60px;") %>
                <% end %>
            </div>
            <div id="mainListDiv" class="main_list">
                <ul class="navlinks">
                  <li>
                   <%= link_to "Welcome back, #{ current_user.username}" , dashboard_index_path %>
